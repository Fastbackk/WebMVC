@model MVCproject.Models.ArabaModel

@{
    ViewData["Title"] = "Araba Detay";
}

<h2>Araba Detay</h2>

<div>
    <h4>@Model.Marka @Model.Model</h4>
    <dl class="row">
        <dt class = "col-sm-2">
            Id
        </dt>
        <dd class = "col-sm-10">
            @Model.Id
        </dd>
        <dt class = "col-sm-2">
            Marka
        </dt>
        <dd class = "col-sm-10">
            @Model.Marka
        </dd>
        <dt class = "col-sm-2">
            Model
        </dt>
        <dd class = "col-sm-10">
            @Model.Model
        </dd>
        <dt class = "col-sm-2">
            Yıl
        </dt>
        <dd class = "col-sm-10">
            @Model.Yil
        </dd>
        <dt class = "col-sm-2">
            Yakıt
        </dt>
        <dd class = "col-sm-10">
            @Model.Yakit
        </dd>
    </dl>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</div>
